<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daemon.mobile.mobilemanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>


    <application
        android:name="com.daemon.mobile.application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/captain"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".SettingActivity"
            android:label="@string/activity_setting_title"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".PhoneSafeActivity"
            android:label="@string/activity_phonesafe_title"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".Setup1Activity" />
        <activity android:name=".Setup2Activity" />
        <activity android:name=".Setup3Activity" />
        <activity android:name=".Setup4Activity" />
        <activity android:name=".ContactsActivity" />

        <service
            android:name="com.daemon.mobile.service.PhoneSafeService"
            android:enabled="true"
            android:exported="true"></service>
        <receiver android:name="com.daemon.mobile.receiver.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <service android:name="com.daemon.mobile.service.LocationService"/>

    </application>

</manifest>
